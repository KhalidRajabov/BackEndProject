@model OrderVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="row" style="margin: 100px 0 100px 0">

      <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  
            
                  <div class="table-responsive">
                    <table id="user-table" class="table table-hover">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Price</th>
                          <th>Date</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model.Orders)
                       {
                            count++;
                           <tr>
                          <td>@count</td>
                          
                          <td>@item.Price</td>
                          <td>@item.OrderedAt.ToString("dddd, dd MMMM yyyy HH:mm:ss")</td>
                          <td>@item.OrderStatus</td>
                          <td>
                              <a class="btn btn-success fs-5" asp-action="detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                          </td>
                        </tr>
                       }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

</div>